<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="16dp">

    <TextView android:text="Chọn ngày"
        android:textStyle="bold" android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:calendarViewShown="true" />

    <TextView android:text="Khung giờ"
        android:layout_marginTop="16dp" android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RadioGroup android:id="@+id/radioTimeSlot"
        android:orientation="horizontal" android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton android:text="Sáng"/>
        <RadioButton android:text="Chiều"/>
        <RadioButton android:text="Tối"/>
    </RadioGroup>

    <Button android:text="Áp dụng"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="24dp"/>
</LinearLayout>
