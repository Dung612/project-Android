<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout 
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="#4A7B9D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Chi tiết phòng"
            app:titleTextColor="@android:color/white"
            app:navigationIcon="@drawable/ic_back"
            app:menu="@menu/room_detail_menu" />

        <!-- Room Image Placeholder -->
        <FrameLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#E0E0E0">

            <TextView
                android:layout_gravity="center"
                android:text="Hình ảnh phòng"
                android:textSize="16sp"/>
        </FrameLayout>

        <!-- Thông tin phòng -->
        <TextView
            android:layout_marginTop="16dp"
            android:text="Thông tin phòng"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Tên phòng -->
        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_room"/>

            <TextView
                android:layout_marginStart="8dp"
                android:text="Tên phòng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_weight="1"
                android:gravity="end"
                android:text="Phòng 101"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Sức chứa -->
        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_people"/>

            <TextView
                android:layout_marginStart="8dp"
                android:text="Sức chứa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_weight="1"
                android:gravity="end"
                android:text="30 người"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Địa điểm -->
        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_location"/>

            <TextView
                android:layout_marginStart="8dp"
                android:text="Địa điểm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_weight="1"
                android:gravity="end"
                android:text="Tòa nhà A, Tầng 1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Quy định -->
        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_rules"/>

            <TextView
                android:layout_marginStart="8dp"
                android:text="Quy định"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_weight="1"
                android:gravity="end"
                android:text="Không ăn uống trong phòng."
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Thiết bị -->
        <TextView
            android:layout_marginTop="16dp"
            android:text="Thiết bị trong phòng"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Danh sách thiết bị -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Item ví dụ -->
            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_projector"/>

                <TextView
                    android:layout_marginStart="8dp"
                    android:text="Máy chiếu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Thêm các thiết bị khác tương tự -->

        </LinearLayout>

        <!-- Chọn ngày -->
        <TextView
            android:layout_marginTop="16dp"
            android:text="Chọn ngày"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_marginTop="8dp"
            android:hint="08/17/2025"
            android:drawableEnd="@drawable/ic_calendar"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Chọn khung giờ -->
        <TextView
            android:layout_marginTop="16dp"
            android:text="Chọn khung giờ"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:00 - 10:00"/>

            <Button
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00 - 12:00"/>

            <Button
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:00 - 16:00"/>
        </LinearLayout>

        <!-- Chọn thiết bị sử dụng -->
        <TextView
            android:layout_marginTop="16dp"
            android:text="Chọn thiết bị sử dụng"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điều hoà"/>

            <Button
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Máy chiếu"/>

            <Button
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khác"/>
        </LinearLayout>

        <!-- Nút Đặt Phòng -->
        <Button
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đặt phòng"
            android:backgroundTint="#4A7B9D"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</ScrollView>
